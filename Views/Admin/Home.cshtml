@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="flex mt-15 w-full h-full">
    @await Html.PartialAsync("_Sidebar")
    <div id="adminContent" class="p-6 w-full flex flex-col justify-start">
        <h1 class="text-2xl font-bold mb-4">Admin Panel</h1>
        <div id="contentArea">
            <!-- Content will be dynamically loaded here -->
        </div>
    </div>
</div>

<!-- Add User Modal -->
<div id="addUserModal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg w-96 p-6 relative">
        <h2 class="text-lg font-semibold mb-4">Add New User</h2>
        <form autocomplete="off">
            <!-- Hidden fields to prevent autofill -->
            <input type="text" style="display:none" aria-hidden="true">
            <input type="password" style="display:none" aria-hidden="true">

            <div class="mb-4">
                <label for="newUserFullName" class="block text-sm font-medium mb-1">Full Name</label>
                <input type="text" id="newUserFullName" name="admin_fullname" autocomplete="off"
                    class="w-full px-3 py-2 border rounded text-sm" />
            </div>
            <div class="mb-4">
                <label for="newUserEmail" class="block text-sm font-medium mb-1">Email</label>
                <input type="email" id="newUserEmail" name="admin_email" autocomplete="off"
                    class="w-full px-3 py-2 border rounded text-sm" />
            </div>
            <div class="mb-4">
                <label for="newUserPassword" class="block text-sm font-medium mb-1">Password</label>
                <input type="password" id="newUserPassword" name="admin_password" autocomplete="new-password"
                    class="w-full px-3 py-2 border rounded text-sm" />
            </div>
            <div class="mb-4">
                <label for="newUserRole" class="block text-sm font-medium mb-1">Role</label>
                <select id="newUserRole" name="admin_role" class="w-full px-3 py-2 border rounded text-sm">
                    <option value="User">User</option>
                    <option value="Admin">Admin</option>
                </select>
            </div>
            <div class="flex justify-end">
                <button type="button" onclick="closeAddUserModal()"
                    class="px-4 py-2 text-sm text-gray-700 hover:text-gray-900">Cancel</button>
                <button type="button" onclick="addUser()"
                    class="px-4 py-2 bg-blue-500 text-white text-sm rounded hover:bg-blue-700">Add</button>
            </div>
        </form>
    </div>
</div>

