<script>
    document.addEventListener('DOMContentLoaded', function () {
        const toggle = document.getElementById('pricingToggle');
        const proPrice = document.getElementById('proPrice');
        const proPeriod = document.getElementById('proPeriod');
        const businessPrice = document.getElementById('businessPrice');
        const businessPeriod = document.getElementById('businessPeriod');

        // Toggle between monthly and yearly pricing
        toggle.addEventListener('click', function () {
            const isYearly = toggle.querySelector('span').classList.contains('translate-x-7');

            if (isYearly) {
                // Switch to monthly
                toggle.querySelector('span').classList.remove('translate-x-7');
                toggle.querySelector('span').classList.add('translate-x-1');
                proPrice.textContent = '$9';
                proPeriod.textContent = '/month';
                businessPrice.textContent = '$24';
                businessPeriod.textContent = '/month';
            } else {
                // Switch to yearly
                toggle.querySelector('span').classList.remove('translate-x-1');
                toggle.querySelector('span').classList.add('translate-x-7');
                proPrice.textContent = '$87';
                proPeriod.textContent = '/year';
                businessPrice.textContent = '$230';
                businessPeriod.textContent = '/year';
            }
        });
    });

    // FAQ toggles
    function toggleFaq(id) {
        const content = document.getElementById(`faq-${id}`);
        const icon = document.getElementById(`faq-icon-${id}`);

        content.classList.toggle('hidden');
        icon.classList.toggle('rotate-180');
    }

    // Accordion toggle for mobile feature comparison
    function toggleAccordion(id) {
        const content = document.getElementById(id);
        const icon = document.getElementById(`${id}Icon`);

        content.classList.toggle('hidden');
        icon.classList.toggle('rotate-180');
    }
</script>