<div id="loginModal" class="w-full h-full hidden">
    <div class="fixed inset-0 bg-black/30 flex items-center justify-center z-50 shadow-md">
        <div class="w-[25rem] relative bg-white rounded-sm shadow-lg">
            <!-- Close Button -->
            <button onclick="closeLoginModal()"
                class="absolute top-4 right-4 py-2 px-3 rounded-full text-gray-500 hover:text-gray-700 cursor-pointer"
                aria-label="Close Modal">
                <i class="fa-solid fa-xmark text-2xl"></i>
            </button>
            <div class="w-full flex justify-center items-center pt-6 pb-2">
                <a href="/" class="flex gap-2 items-center h-full text-[#173B4D]">
                    <img src="~/assets/logo.png" alt="Logo" class="size-8" />
                    <span class="text-[24px] font-bold">Taskie</span>
                </a>
            </div>
            <div class="w-full bg-white rounded-xl flex flex-col">
                <div class="aside-left w-full p-6 flex flex-col items-center justify-center">
                    <p id="modalTitle" class="text-base font-medium text-[#172B4D]">Login to continue</p>
                    <form id="loginForm" class="mt-4 w-9/10">
                        <!-- Login Form -->
                        <!-- Login Form -->
                        <div id="loginFields">
                            <div class="form-control mb-4">
                                <input id="login-email" type="text" required
                                    class="rounded-sm w-full px-3 py-2 border-b-2 border-gray-100 text-gray-700"
                                    placeholder="abc@email.com" aria-label="Email" />
                            </div>
                            <div class="form-control mb-4 relative">
                                <input id="login-password" type="password" required
                                    class="rounded-sm w-full px-3 py-2 border-b-2 border-gray-100 text-gray-700"
                                    placeholder="Password" aria-label="Password" />
                            </div>
                            <div id="loginErrorMessage" class="text-red-500 text-sm hidden"></div>
                            <button type="button" onclick="login()"
                                class="rounded-sm w-full px-4 py-3 text-white bg-blue-500 rounded hover:bg-blue-700 cursor-pointer text-[1.2rem]">
                                Login
                            </button>
                        </div>

                        <!-- Sign-Up Form -->
                        <div id="signupFields" class="hidden">
                            <div class="form-control mb-4">
                                <input id="signup-fullname" type="text" required
                                    class="w-full px-3 py-2 border-b-2 border-gray-100 text-gray-700"
                                    placeholder="Full Name" aria-label="Full Name" />
                            </div>
                            <div class="form-control mb-4">
                                <input id="signup-email" type="text" required
                                    class="w-full px-3 py-2 border-b-2 border-gray-100 text-gray-700"
                                    placeholder="abc@email.com" aria-label="Email" />
                            </div>
                            <div class="form-control mb-4 relative">
                                <input id="signup-password" type="password" required
                                    class="w-full px-3 py-2 border-b-2 border-gray-100 text-gray-700"
                                    placeholder="Password" aria-label="Password" />
                            </div>
                            <div class="form-control mb-4 relative">
                                <input id="signup-confirmPassword" type="password" required
                                    class="w-full px-3 py-2 border-b-2 border-gray-100 text-gray-700"
                                    placeholder="Confirm Password" aria-label="Confirm Password" />
                            </div>
                            <div id="signupErrorMessage" class="text-red-500 text-sm hidden"></div>
                            <button type="button" onclick="signup()"
                                class="w-full px-4 py-3 text-white bg-blue-500 rounded hover:bg-blue-700 cursor-pointer text-[1.2rem]">
                                Sign Up
                            </button>
                        </div>
                    </form>
                    <div class="mt-4">
                        <p class="text-sm text-gray-600">
                            <span id="toggleText">Don't have an account? </span>
                            <button id="toggleButton" onclick="toggleLoginSignup()"
                                class="text-blue-600 hover:underline">
                                Sign Up
                            </button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/Login.js" asp-append-version="true"></script>