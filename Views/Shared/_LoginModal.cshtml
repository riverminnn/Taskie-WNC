<div id="loginModal" class="w-full h-full hidden">
    <div
        class="fixed inset-0 bg-black/50 backdrop-blur-sm flex items-center justify-center z-50 transition-opacity duration-300">
        <div
            class="w-[28rem] modal-content relative bg-gradient-to-br from-white to-gray-50 rounded-lg shadow-2xl overflow-hidden transform transition-all duration-500 scale-100 opacity-100">
            <!-- Close Button -->
            <button onclick="closeLoginModal()"
                class="absolute top-4 right-4 px-3 py-2 rounded-full text-gray-600 hover:bg-gray-200 hover:text-gray-800 transition-colors flex items-center"
                aria-label="Close Modal">
                <i class="fa-solid fa-xmark text-xl"></i>
            </button>
            <div class="w-full flex flex-col">
                <div class="aside-left w-full p-8 flex flex-col items-center justify-center">
                    <!-- Header with Animated Gradient Text -->
                    <p id="modalTitle"
                        class="text-xl font-semibold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-indigo-600 mb-6 animate-pulse">
                        Login to Continue
                    </p>
                    <form id="loginForm" class="mt-2 w-full">
                        <!-- Login Form -->
                        <div id="loginFields">
                            <div class="form-control mb-5">
                                <input id="login-email" type="text" required
                                    class="w-full px-4 py-3 bg-gray-100/50 border border-gray-200 rounded-md text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:bg-white transition-all duration-300"
                                    placeholder="abc@email.com" aria-label="Email" />
                            </div>
                            <div class="form-control mb-5 relative">
                                <input id="login-password" type="password" required
                                    class="w-full px-4 py-3 bg-gray-100/50 border border-gray-200 rounded-md text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:bg-white transition-all duration-300 pr-12"
                                    placeholder="Password" aria-label="Password" />
                                <button type="button"
                                    onclick="togglePassword('login-password', 'login-password-toggle')"
                                    class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus:outline-none">
                                    <i id="login-password-toggle" class="fa-solid fa-eye"></i>
                                </button>
                            </div>
                            <div id="loginErrorMessage" class="text-red-500 text-sm hidden mb-4"></div>
                            <button type="button" onclick="login()"
                                class="w-full px-4 py-3 text-white bg-gradient-to-r from-blue-500 to-indigo-600 rounded-md hover:from-blue-600 hover:to-indigo-700 focus:ring-4 focus:ring-blue-300 transition-all duration-300 text-lg font-medium">
                                Login
                            </button>
                        </div>

                        <!-- Sign-Up Form -->
                        <div id="signupFields" class="hidden">
                            <div class="form-control mb-5">
                                <input id="signup-fullname" type="text" required
                                    class="w-full px-4 py-3 bg-gray-100/50 border border-gray-200 rounded-md text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:bg-white transition-all duration-300"
                                    placeholder="Full Name" aria-label="Full Name" />
                            </div>
                            <div class="form-control mb-5">
                                <input id="signup-email" type="text" required
                                    class="w-full px-4 py-3 bg-gray-100/50 border border-gray-200 rounded-md text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:bg-white transition-all duration-300"
                                    placeholder="abc@email.com" aria-label="Email" />
                            </div>
                            <div class="form-control mb-5 relative">
                                <input id="signup-password" type="password" required
                                    class="w-full px-4 py-3 bg-gray-100/50 border border-gray-200 rounded-md text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:bg-white transition-all duration-300 pr-12"
                                    placeholder="Password" aria-label="Password" />
                                <button type="button"
                                    onclick="togglePassword('signup-password', 'signup-password-toggle')"
                                    class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus:outline-none">
                                    <i id="signup-password-toggle" class="fa-solid fa-eye"></i>
                                </button>
                            </div>
                            <div class="form-control mb-5 relative">
                                <input id="signup-confirmPassword" type="password" required
                                    class="w-full px-4 py-3 bg-gray-100/50 border border-gray-200 rounded-md text-gray-800 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-400 focus:bg-white transition-all duration-300 pr-12"
                                    placeholder="Confirm Password" aria-label="Confirm Password" />
                                <button type="button"
                                    onclick="togglePassword('signup-confirmPassword', 'signup-confirmPassword-toggle')"
                                    class="absolute inset-y-0 right-0 flex items-center pr-3 text-gray-500 hover:text-gray-700 focus:outline-none">
                                    <i id="signup-confirmPassword-toggle" class="fa-solid fa-eye"></i>
                                </button>
                            </div>
                            <div id="signupErrorMessage" class="text-red-500 text-sm hidden mb-4"></div>
                            <button type="button" onclick="signup()"
                                class="w-full px-4 py-3 text-white bg-gradient-to-r from-blue-500 to-indigo-600 rounded-md hover:from-blue-600 hover:to-indigo-700 focus:ring-4 focus:ring-blue-300 transition-all duration-300 text-lg font-medium">
                                Sign Up
                            </button>
                        </div>
                    </form>
                    <div class="mt-6">
                        <p class="text-sm text-gray-600">
                            <span id="toggleText">Don't have an account? </span>
                            <button id="toggleButton" onclick="toggleLoginSignup()"
                                class="text-blue-600 hover:text-blue-800 hover:underline transition-colors duration-200">
                                Sign Up
                            </button>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("Alerts")
<script src="~/js/alert.js" asp-append-version="true"></script>
<script src="~/js/login.js" asp-append-version="true"></script>