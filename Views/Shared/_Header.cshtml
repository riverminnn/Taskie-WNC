<header class="fixed bg-white w-full h-15 shadow-md flex flex-col justify-center items-center">
    <nav class="navbar w-6/10 h-full flex justify-center items-center ">
        <div class="left-nav flex gap-4 items-center h-full text-[#091E42] w-7/10 justify-start">
            <a href="/" class="flex gap-2 items-center h-full text-[#173B4D]">
                <img src="~/assets/logo.png" alt="Logo" class="size-6" />
                <span class="text-[18px] font-bold">Taskie</span>
            </a>
            <button onclick="location.href='/feature'" class="cursor-pointer hover:text-blue-500">
                Features
            </button>
            <button onclick="location.href='/about'" class="cursor-pointer hover:text-blue-500">
                About
            </button>
            <button onclick="location.href='/contact'" class="cursor-pointer hover:text-blue-500">
                Contact
            </button>
        </div>
        <div class="right-nav flex items-center gap-4 h-full w-3/10 justify-end">
            @if (!string.IsNullOrEmpty(Context.Session.GetString("Email")))
            {
                <button onclick="location.href='/User/Home'"
                    class="block h-full px-6 bg-[#172b4d] text-white cursor-pointer hover:bg-[#4c5970] font-medium">
                    Go to your boards
                </button>
            }
            else
            {
                <button onclick="openLoginModal()"
                    class="block h-full px-4 bg-blue-500 text-white cursor-pointer hover:bg-blue-700 font-medium">
                    Login
                </button>
            }
        </div>
    </nav>
</header>

<!-- Include Login Modal -->
@await Html.PartialAsync("_LoginModal")

<script src="~/js/header.js" asp-append-version="true"></script>
<script src="~/js/login.js" asp-append-version="true"></script>