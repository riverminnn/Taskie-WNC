<header
    class="fixed top-0 w-full h-15 bg-white shadow-md flex justify-center items-center z-50 transition-shadow duration-300 hover:shadow-lg hover:shadow-blue-300/50">
    <nav class="w-6/10 h-full flex justify-between items-center px-6">
        <!-- Left Navigation -->
        <div class="flex items-center gap-4 text-[#091E42]">
            <a href="/" class="flex items-center gap-2 text-[#173B4D]">
                <img src="~/assets/logo.png" alt="Logo" class="w-6 h-6" />
                <span class="text-lg font-bold">Taskie</span>
            </a>
            <button onclick="location.href='/feature'" class="text-sm hover:text-blue-500">
                Features
            </button>
            <button onclick="location.href='/about'" class="text-sm hover:text-blue-500">
                About
            </button>
            <button onclick="location.href='/contact'" class="text-sm hover:text-blue-500">
                Contact
            </button>
        </div>

        <!-- Right Navigation -->
        <div class="flex items-center gap-4">
            @if (!string.IsNullOrEmpty(Context.Session.GetString("Email")))
            {
                <button onclick="location.href='/User/Home'"
                    class="px-6 py-2 bg-[#172b4d] text-white text-sm font-medium rounded hover:bg-[#4c5970]">
                    Go to your boards
                </button>
            }
            else
            {
                <button onclick="openLoginModal()"
                    class="px-4 py-2 bg-blue-500 text-white text-sm font-medium rounded hover:bg-blue-700">
                    Login
                </button>
            }
        </div>
    </nav>
</header>

<!-- Include Login Modal -->
@await Html.PartialAsync("_LoginModal")

<script src="~/js/header.js" asp-append-version="true"></script>