<div id="newBoardModal" class="hidden fixed inset-0 bg-black/30 bg-opacity-50 items-center justify-center z-50">
    <div class="bg-white rounded-lg shadow-lg w-96 p-6 relative">
        <!-- Modal Header -->
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold">Create board</h2>
            <button onclick="closeNewBoardModal()" class="text-gray-500 hover:text-gray-700">
                <i class="fa-solid fa-times"></i>
            </button>
        </div>

        <!-- Modal Content -->
        <div class="mb-4">
            <h3 class="text-sm font-medium mb-2">Background (coming soon)</h3>
            <div class="grid grid-cols-5 gap-2 mb-4">
                <div class="w-10 h-10 bg-gray-300 rounded cursor-pointer"></div>
                <div class="w-10 h-10 bg-blue-500 rounded cursor-pointer"></div>
                <div class="w-10 h-10 bg-purple-500 rounded cursor-pointer"></div>
                <div class="w-10 h-10 bg-yellow-500 rounded cursor-pointer"></div>
                <div class="w-10 h-10 bg-pink-500 rounded cursor-pointer"></div>
            </div>
            <label for="boardTitle" class="block text-sm font-medium mb-1">Board title <span
                    class="text-red-500">*</span></label>
            <input id="boardTitle" type="text" class="w-full px-3 py-2 border rounded text-sm"
                placeholder="Enter board title">
            <p id="boardTitleError" class="text-sm text-red-500 mt-1 hidden">⚠️ Board title is required</p>
        </div>

        <!-- Modal Footer -->
        <div class="flex justify-end">
            <button onclick="closeNewBoardModal()" class="px-4 py-2 text-sm text-gray-700 hover:text-gray-900">
                Cancel
            </button>
            <button onclick="createBoard()" class="px-4 py-2 bg-blue-500 text-white text-sm rounded hover:bg-blue-700">
                Create
            </button>
        </div>
    </div>
</div>