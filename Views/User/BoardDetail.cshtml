<header
    class="fixed mt-12 bg-gradient-to-r from-slate-100 to-slate-200 w-full h-12 flex justify-center items-center z-2">
    <nav class="navbar w-full h-full flex justify-center items-center px-6">
        <div class="left-nav flex gap-4 items-center h-full w-7/10 justify-start">
            <button class="font-bold text-gray-800 w-fit">
                <input class="w-fit px-2 py-1" type="" id="boardName" value="@ViewData["BoardName"]" />
            </button>
            <button id="starred" onclick="toggleBoardStar()"
                class="flex justify-center items-center px-1 py-1 rounded-sm hover:bg-white/30 size-8">
                <i class="fa-regular fa-star text-[14px]"></i>
            </button>
            @if (ViewData["UserRole"]?.ToString() == "Viewer")
            {
                <span class="px-2 py-1 bg-gray-200 text-gray-700 rounded-full text-xs font-medium">
                    View Only
                </span>
            }
        </div>
        <div class="right-nav flex items-center gap-4 h-full w-3/10 justify-end relative">
            <button id="shareBoard" onclick="openShareModal()"
                class="flex justify-center items-center px-3 py-1 rounded bg-blue-500 text-white text-sm hover:bg-blue-600 mr-2">
                <i class="fa-solid fa-user-plus mr-1"></i>
                Share
            </button>
            <div class="relative">
                <button id="settings" onclick="toggleSettingsDropdown()"
                    class="flex justify-center items-center px-1 py-1 rounded-sm hover:bg-white/30 size-8">
                    <i class="fa-solid fa-ellipsis text-[14px]"></i>
                </button>
                <div id="settings-dropdown"
                    class="absolute right-0 mt-1 w-40 bg-white border-gray-300 border rounded shadow-md z-10 hidden">
                    <ul class="py-1">
                        <li>
                            <button onclick="deleteBoard()"
                                class="block w-full text-left px-4 py-2 text-sm text-red-600 hover:bg-gray-200 cursor-pointer">
                                Delete board
                            </button>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
</header>
<main class="bg-gradient-to-r from-slate-200 to-slate-300 w-full h-full border-b border-gray-100">
    <input type="hidden" id="boardId" value="@ViewData["BoardID"]" />
    <div class="lists-col flex gap-4 h-full w-full p-4 mt-24">
        <!-- Lists will be dynamically rendered here -->
    </div>
</main>

<!-- New List Modal -->
<div id="newListModal" class="hidden fixed inset-0 bg-opacity-50 z-1">
    <div id="newListModalContent" class="absolute bg-[#F1F3F4] rounded-lg shadow-md p-4 h-28 w-full max-w-[300px]">
        <input type="text" id="listNameInput" placeholder="Enter list name..."
            class="w-full px-3 py-2 border rounded text-sm mb-2 focus:outline-blue-500" />
        <div class="flex justify-between items-center">
            <button onclick="addList()" class="px-4 py-2 bg-blue-500 text-white text-sm rounded hover:bg-blue-700">
                Add list
            </button>
            <button onclick="closeNewListModal()" class="text-gray-500 hover:text-gray-700">
                <i class="fa-solid fa-times"></i>
            </button>
        </div>
    </div>
</div>

<!-- New Card Modal -->
<div id="newCardModal" class="hidden fixed inset-0 bg-opacity-50 z-1">
    <div id="newCardModalContent" class="absolute bg-[#F1F3F4] rounded-lg shadow-md p-4 h-28 w-full max-w-[300px]">
        <input type="text" id="cardNameInput" placeholder="Enter card name..."
            class="w-full px-3 py-2 border rounded text-sm mb-2 focus:outline-blue-500" />
        <div class="flex justify-between items-center">
            <button onclick="addCard()" class="px-4 py-2 bg-blue-500 text-white text-sm rounded hover:bg-blue-700">
                Add card
            </button>
            <button onclick="closeNewCardModal()" class="text-gray-500 hover:text-gray-700">
                <i class="fa-solid fa-times"></i>
            </button>
        </div>
    </div>
</div>

<!-- Card Detail Modal -->
<div id="cardDetailModal" class="hidden fixed inset-0 bg-black/30 z-50 flex items-center justify-center">
    <div id="cardDetailModalContent" class="bg-white rounded-lg shadow-lg w-full max-w-3xl p-6 relative">
        <!-- Header section -->
        <div class="flex items-center justify-between mb-4 relative">
            <div class="flex items-center flex-grow">
                <button id="cardStatusToggle" class="mr-3 text-lg">
                    <i class="fa-regular fa-circle-check text-gray-400"></i>
                </button>
                <input type="text" id="cardDetailName"
                    class="text-xl font-bold flex-grow border-none focus:outline-none focus:ring-1 focus:ring-blue-500 rounded px-2 py-1 mr-4" />
            </div>
            <button id="closeCardDetailModal" class="text-gray-500 hover:text-gray-700">
                <i class="fa-solid fa-times text-lg"></i>
            </button>
        </div>

        <!-- Content section -->
        <div class="flex flex-col md:flex-row gap-6">
            <!-- Left column - Description and Comments -->
            <div class="flex-grow">

                <!-- Description -->
                <div class="mb-6">
                    <div class="flex items-center mb-2">
                        <i class="fa-solid fa-align-left mr-2 text-gray-500"></i>
                        <h3 class="text-lg font-semibold">Description</h3>
                    </div>
                    <textarea id="cardDescription"
                        class="w-full min-h-[80px] max-h-[300px] overflow-y-auto bg-gray-100 border-none rounded p-2 focus:outline-none focus:ring-1 focus:ring-blue-500 text-slate-800 resize-y transition-all duration-200 ease-in-out scrollbar-thin scrollbar-thumb-gray-400 scrollbar-track-transparent"
                        placeholder="Add a more detailed description..."></textarea>
                </div>

                <!-- Replace the existing comment section with this -->
                <div class="mt-6">
                    <div class="flex items-center mb-2">
                        <i class="fa-regular fa-comment mr-2 text-gray-500"></i>
                        <h3 class="text-lg font-semibold">Comments</h3>
                    </div>
                    <div id="commentForm" class="mb-3">
                        <textarea id="cardComment"
                            class="w-full min-h-[40px] border rounded p-2 focus:outline-none focus:ring-1 focus:ring-blue-500 mb-2"
                            placeholder="Write a comment..."></textarea>
                        <button id="addCommentButton"
                            class="px-3 py-1 bg-blue-500 text-white text-sm rounded hover:bg-blue-600">
                            Save
                        </button>
                    </div>
                    <div id="commentsContainer" class="max-h-[250px] overflow-y-auto space-y-3">
                        <!-- Comments will be rendered here dynamically -->
                        <div class="text-sm text-gray-500 italic">Loading comments...</div>
                    </div>
                </div>
            </div>

            <!-- Right column - Actions -->
            <div class="w-full md:w-1/4">
                <!-- Add to card -->
                <div class="mb-4 *:cursor-pointer">
                    <button class="w-full flex items-center text-gray-600 hover:bg-gray-100 p-2 rounded mb-1">
                        <i class="fa-solid fa-user-plus mr-2"></i> Members
                    </button>
                    <button class="w-full flex items-center text-gray-600 hover:bg-gray-100 p-2 rounded mb-1">
                        <i class="fa-solid fa-tag mr-2"></i> Labels
                    </button>
                    <button class="w-full flex items-center text-gray-600 hover:bg-gray-100 p-2 rounded mb-1">
                        <i class="fa-solid fa-check-square mr-2"></i> Checklist
                    </button>
                    <!-- Find the "Dates" button and update it -->
                    <!-- Update the Dates button to be a relative container -->
                    <div class="relative w-full">
                        <button id="datesButton"
                            class="w-full flex items-center text-gray-600 hover:bg-gray-100 p-2 rounded mb-1">
                            <i class="fa-regular fa-clock mr-2"></i> Dates
                        </button>
                        <!-- Put the datePickerContainer here, inside the relative div -->
                        <div id="datePickerContainer"
                            class="hidden absolute right-0 top-full mt-1 p-2 bg-white border border-gray-200 rounded shadow-md z-20 w-64">
                            <label for="cardDueDate" class="block text-sm font-medium text-gray-700 mb-1">Due
                                Date</label>
                            <input type="date" id="cardDueDate" class="w-full border rounded p-2" />
                            <div class="flex justify-end mt-2">
                                <button onclick="removeDueDate()"
                                    class="text-sm text-gray-600 hover:text-gray-800 mr-2">Remove</button>
                                <button onclick="saveDueDate()"
                                    class="text-sm bg-blue-500 text-white px-2 py-1 rounded hover:bg-blue-600">Save</button>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Actions -->
                <div class="mb-4 *:cursor-pointer">
                    <h4 class="text-sm font-semibold text-gray-700 mb-2">Actions</h4>
                    <button class="w-full flex items-center text-gray-600 hover:bg-gray-100 p-2 rounded mb-1">
                        <i class="fa-solid fa-arrow-right mr-2"></i> Move
                    </button>
                    <button class="w-full flex items-center text-gray-600 hover:bg-gray-100 p-2 rounded mb-1">
                        <i class="fa-solid fa-copy mr-2"></i> Copy
                    </button>
                    <button id="deleteCardButton" onclick="deleteCard()"
                        class="w-full flex items-center text-gray-600 hover:bg-gray-100 p-2 rounded mb-1">
                        <i class="fa-solid fa-trash mr-2"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Board Sharing Modal -->
<div id="shareBoardModal" class="hidden fixed inset-0 bg-black/30 z-50 items-center justify-center">
    <div class="bg-white rounded-lg shadow-lg w-full max-w-lg p-6">
        <!-- Modal Header -->
        <div class="flex justify-between items-center mb-4">
            <h2 class="text-lg font-semibold">Share Board</h2>
            <button onclick="closeShareModal()" class="text-gray-500 hover:text-gray-700">
                <i class="fa-solid fa-times"></i>
            </button>
        </div>

        <!-- Invite Form -->
        <div class="mb-6">
            <label for="inviteEmail" class="block text-sm font-medium mb-1">Invite people</label>
            <div class="flex gap-2">
                <input type="email" id="inviteEmail" placeholder="Email address"
                    class="flex-grow px-3 py-2 border rounded text-sm" />
                <select id="inviteRole" class="border rounded px-3 py-2 text-sm">
                    <option value="Editor">Editor</option>
                    <option value="Viewer">Viewer</option>
                </select>
                <button onclick="inviteUser()"
                    class="px-4 py-2 bg-blue-500 text-white text-sm rounded hover:bg-blue-700">
                    Invite
                </button>
            </div>
            <p id="inviteError" class="text-sm text-red-500 mt-1 hidden"></p>
        </div>

        <!-- Current Members -->
        <div>
            <h3 class="text-md font-medium mb-2">Board members</h3>
            <div id="boardOwner" class="py-2 px-1 border-b flex items-center justify-between">
                <!-- Owner info will be rendered here -->
            </div>
            <div id="boardMembers" class="max-h-60 overflow-y-auto">
                <!-- Members will be rendered here -->
            </div>
        </div>
    </div>
</div>

<input type="hidden" id="userRole" value="@ViewData["UserRole"]" />

<script src="~/js/boardDetail.js" type="module" asp-append-version="true"></script>
<script src="~/js/cardDetail.js" type="module" asp-append-version="true"></script>
<script src="~/js/starredBoards.js" asp-append-version="true"></script>

<!-- Include the New Board Modal -->
@await Html.PartialAsync("User/NewBoard")

<script src="~/js/user.js" asp-append-version="true"></script>