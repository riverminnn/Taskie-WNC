<!-- Board Sharing Modal -->
<div id="shareBoardModal"
    class="hidden fixed inset-0 bg-black/30 backdrop-blur-sm z-50 flex items-center justify-center p-4 md:p-0">
    <div
        class="bg-white rounded-lg shadow-lg w-full max-w-[95vw] md:max-w-lg p-4 md:p-6 max-h-[90vh] md:max-h-[80vh] overflow-y-auto">
        <!-- Modal Header -->
        <div class="flex justify-between items-center mb-3 md:mb-4">
            <h2 class="text-base md:text-lg font-semibold">Share Board</h2>
            <button onclick="closeShareModal()"
                class="text-gray-500 hover:text-gray-700 p-1.5 rounded-full hover:bg-gray-100">
                <i class="fa-solid fa-times text-sm md:text-base"></i>
            </button>
        </div>

        <!-- Invite Form -->
        <div class="mb-4 md:mb-6">
            <label for="inviteEmail" class="block text-xs md:text-sm font-medium mb-1">Invite people</label>
            <div class="flex flex-col md:flex-row gap-2">
                <input type="email" id="inviteEmail" placeholder="Email address"
                    class="w-full px-3 py-2 border rounded text-sm min-h-[40px]" />
                <div class="flex gap-2">
                    <select id="inviteRole" class="border rounded px-3 py-2 text-sm min-w-[100px] min-h-[40px]">
                        <option value="Editor">Editor</option>
                        <option value="Viewer">Viewer</option>
                    </select>
                    <button onclick="inviteUser()"
                        class="px-4 py-2 bg-blue-500 text-white text-sm rounded hover:bg-blue-700 min-h-[40px] whitespace-nowrap flex-shrink-0">
                        Invite
                    </button>
                </div>
            </div>
            <p id="inviteError" class="text-xs md:text-sm text-red-500 mt-1 hidden"></p>
        </div>

        <!-- Current Members -->
        <div>
            <h3 class="text-sm md:text-md font-medium mb-2">Board members</h3>
            <div id="boardOwner" class="py-2 px-1 border-b flex items-center justify-between">
                <!-- Owner info will be rendered here -->
            </div>
            <div id="boardMembers" class="max-h-48 md:max-h-60 overflow-y-auto">
                <!-- Members will be rendered here -->
            </div>
        </div>
    </div>
</div>